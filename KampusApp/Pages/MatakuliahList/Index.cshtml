@page
@model KampusApp.Pages.MatakuliahList.IndexModel
@{
}


<br />
<div class="container row p-o m-0">
    <div class="col-9">
        <h2 class="text-info">List Matakuliah</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Tambah Matakuliah</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.matakuliah.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="matakuliah.FirstOrDefault().IDMatakuliah"></label>
                        </th>
                        <th>
                            <label asp-for="matakuliah.FirstOrDefault().NamaMatakuliah"></label>
                        </th>
                        <th>
                            <label asp-for="matakuliah.FirstOrDefault().SKS"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.matakuliah)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.IDMatakuliah)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.NamaMatakuliah)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.SKS)
                        </td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.IDMatakuliah" class="btn btn-success btn-sm">Edit</a>
                            <button asp-page-handler="Delete" asp-route-id="@item.IDMatakuliah" onclick="return confirm('Anda yakin ingin menghapus data ?')" class="btn btn-danger btn-sm">Delete</button>
                        </td>
                    </tr>
                    }
                </table>
            }
            else
            {
                <p>Tidak ada data matakuliah. </p>
            }
        </form>
    </div>
</div>